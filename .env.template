# ============================================================================
# BRD Agent - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values:
#   copy .env.template .env
# ============================================================================

# --------------------------------------------------------------------------
# LLM Provider Configuration (Choose ONE)
# --------------------------------------------------------------------------
# Option 1: Google Gemini (RECOMMENDED - Free tier available)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Option 2: OpenAI
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Option 3: Together AI (for open-source models like Phi-3)
# Get your API key from: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# Which LLM provider to use: "gemini", "openai", "together", or "local"
LLM_PROVIDER=gemini

# Model name (leave empty for default per provider)
# Gemini default: gemini-2.0-flash
# OpenAI default: gpt-3.5-turbo
# Together default: microsoft/Phi-3-mini-4k-instruct
LLM_MODEL=

# --------------------------------------------------------------------------
# Speech-to-Text Configuration (Optional - for audio uploads)
# --------------------------------------------------------------------------
# Deepgram API (optional): https://console.deepgram.com/
DEEPGRAM_API_KEY=

# AssemblyAI API (optional): https://www.assemblyai.com/app/
ASSEMBLYAI_API_KEY=

# --------------------------------------------------------------------------
# Application Configuration
# --------------------------------------------------------------------------
# Flask secret key for sessions (change this!)
SECRET_KEY=brd-agent-hackathon-secret-key-change-me

# Database path (SQLite)
DATABASE_URL=sqlite:///brd_agent.db

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50

# Debug mode (set to False in production)
DEBUG=True

# Server host and port
HOST=0.0.0.0
PORT=5000

# Streamlit port (for frontend)
STREAMLIT_PORT=8501

# --------------------------------------------------------------------------
# Dataset Paths (Auto-populated by data_ingest.py)
# --------------------------------------------------------------------------
ENRON_DATASET_PATH=data/datasets/enron/
AMI_DATASET_PATH=data/datasets/ami/
MEETING_TRANSCRIPTS_PATH=data/datasets/meeting_transcripts/

# --------------------------------------------------------------------------
# Feature Flags
# --------------------------------------------------------------------------
ENABLE_SPEECH_TO_TEXT=False
ENABLE_STAKEHOLDER_GRAPH=True
ENABLE_CONFLICT_DETECTION=True
ENABLE_MULTI_TOPIC_CLUSTERING=True
ENABLE_GROUND_TRUTH_VALIDATION=True
